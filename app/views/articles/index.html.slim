h1 Listing articles

#app

table
  thead
    tr
      th Title
      th Text
      th User
      th
      th
      th

  tbody
    - @articles.each do |article|
      tr
        td = article.title
        td = article.text
        td = article.user_id
        td = link_to 'Show', article
        td = link_to 'Edit', edit_article_path(article)
        td = link_to 'Destroy', article, data: {:confirm => 'Are you sure?'}, :method => :delete

br

= link_to 'New Article', new_article_path

= javascript_include_tag ''
javascript:
  document.addEventListener "DOMContentLoaded", (_e) ->
    ReactDOM.render `<Application flux={flux} pollInterval={ 2000 } />`, document.getElementById('app')
